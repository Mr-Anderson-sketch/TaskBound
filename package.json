{
  "name": "timebound",
  "version": "1.0.0",
  "description": "Sticky, always-on-top desktop app for focused timeboxing and task scoring.",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite dev --host --port 5173",
    "dev:electron": "wait-on dist/main/main.js dist/preload/preload.js http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "rimraf dist && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "package": "npm run build && electron-builder",
    "lint": "tsc --noEmit -p tsconfig.json",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "TimeBound",
    "appId": "com.timebound.app",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron": "^28.2.0",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
  "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
  "tailwindcss": "^3.3.5",
  "typescript": "^5.6.2",
    "vite": "^5.0.2",
    "wait-on": "^7.0.1"
  }
}
